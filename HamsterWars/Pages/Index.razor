@page "/"
@using DataAccessLibrary
@inject IHamsterData _db


<PageTitle>Index</PageTitle>

<h1>Welcome to HamsterWars</h1>
@if (hamstersList is null)
{
    <p><em>Loading...</em></p>
}
else
{

    @*<h3>Our cutest Hamster is @GetCutestHamster()</h3>*@
}





@code {
    
    private List<Hamsters> hamstersList = new List<Hamsters>();
    protected override async Task OnInitializedAsync()
    {
        hamstersList = await _db.FindWinner();
    }
   
  
}
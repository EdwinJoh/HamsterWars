@page "/hamsters/Hamster"

@using DataAccessLibrary


@inject IHamsterData _db




<h3>Hamster Page</h3>

<h4>Our Hamsters</h4>
@if (hamsters is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var hamster in hamsters)
            {
                <tr>
                    <td>@hamster.Name</td>
                </tr>
            }
        </tbody>
    </table>
}






@code {
    private List<Hamsters> hamsters = new List<Hamsters>();
    protected override async Task OnInitializedAsync()
    {
        hamsters = await _db.GetHamsters();
    }
}


@page "/mypages/Hamster"
@using DataAccessLibrary
@inject IHamsterData _db


<h4>Our Hamsters</h4>
@if (hamsters is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">Favorite Food</th>
                    <th scope="col">Loves</th>
                    <th scope="col">Wins</th>
                    <th scope="col">Defeats</th>
                    <th scope="col">Games played</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hamster in hamsters)
                {
                    <tr>
                        <td>@hamster.Name</td>
                        <td>@hamster.Age</td>
                        <td>@hamster.FavFood</td>
                        <td>@hamster.Loves</td>
                        <td>@hamster.Wins</td>
                        <td>@hamster.Defeats</td>
                        <td>@hamster.Games</td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
        }






        @code {
        private List<HamsterModel> hamsters = new List<HamsterModel>();
        protected override async Task OnInitializedAsync()
        {
            hamsters = await _db.GetHamsters();
        }
    }

